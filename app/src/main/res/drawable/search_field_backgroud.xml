<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Latar belakang warna putih -->
    <solid android:color="@android:color/white"/>

    <!-- Sudut membulat -->
    <corners android:radius="12dp"/>

    <!-- Garis tepi -->
    <stroke
        android:width="2dp"
        android:color="@android:color/darker_gray" />

    <!-- Padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
