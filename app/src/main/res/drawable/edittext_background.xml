<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Tidak ada warna latar belakang, jadi hanya garis tepi yang terlihat -->

    <!-- Sudut membulat -->
    <corners android:radius="12dp" />

    <!-- Garis tepi (stroke) berwarna putih -->
    <stroke
        android:width="2dp"
        android:color="@color/white" />

    <!-- Padding dalam -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
